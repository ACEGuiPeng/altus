{
    "name": "altus",
    "version": "3.3.0",
    "description": "Electron-based desktop wrapper for WhatsApp Web",
    "homepage": "https://shadythgod.github.io/altus",
    "repository": {
        "url": "https://github.com/ShadyThGod/altus"
    },
    "bugs": {
        "url": "https://github.com/ShadyThGod/altus/issues"
    },
    "main": "index.js",
    "author": {
        "name": "Aman Harwara (ShadyThGod)",
        "email": "amanharwara@gmail.com"
    },
    "license": "GPL-3.0",
    "scripts": {
        "start": "electron ."
    },
    "devDependencies": {
        "electron": "^7.1.0"
    },
    "dependencies": {
        "@simonwep/pickr": "^1.4.6",
        "custom-electron-titlebar": "^3.0.0",
        "electron-context-menu": "^0.15.0",
        "electron-store": "^5.0.0",
        "electron-windows-badge": "^1.0.5",
        "escape-string-regexp": "^2.0.0",
        "fs-extra": "^8.1.0",
        "mousetrap": "^1.6.3",
        "node-fetch": "^2.6.0",
        "sweetalert2": "^8.18.3",
        "tabbyjs": "^12.0.3",
        "uuid": "^3.3.3"
    },
    "build": {
        "appId": "harwara.aman.altus",
        "productName": "Altus",
        "afterAllArtifactBuild": "./build/after-all-artifact-build.js",
        "mac": {
            "category": "public.app-category.social-networking",
            "target": [
                "dmg"
            ]
        },
        "dmg": {
            "background": "build/background.png",
            "icon": "build/icon.icns",
            "iconSize": 100,
            "contents": [{
                    "x": 380,
                    "y": 280,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 110,
                    "y": 280,
                    "type": "file"
                }
            ],
            "window": {
                "width": 500,
                "height": 400
            }
        },
        "nsis": {
            "oneClick": "false",
            "artifactName": "${productName}-Setup-${version}.${ext}",
            "allowToChangeInstallationDirectory": "true"
        },
        "win": {
            "target": [{
                "target": "nsis",
                "arch": [
                    "x64",
                    "ia32"
                ]
            }],
            "icon": "build/icon.ico"
        },
        "linux": {
            "category": "Chat",
            "target": [
                "AppImage"
            ],
            "icon": "build/icon.png"
        }
    }
}